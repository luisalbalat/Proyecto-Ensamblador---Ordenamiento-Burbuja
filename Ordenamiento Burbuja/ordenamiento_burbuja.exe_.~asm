TITLE ORDENAMIENTO_BURBUJA

include 'emu8086.inc'

DATOS SEGMENT

LISTA_NUMEROS DB 8 DUP(?)
X DB 2
Y DB 2


DATOS ENDS

PILA SEGMENT

DB 64 DUP(0)

PILA ENDS

CODIGO SEGMENT

INICIO PROC FAR

ASSUME DS:DATOS, CS:CODIGO, SS:PILA

PUSH DS
MOV AX,0
PUSH AX

MOV AX, DATOS
MOV DS, AX
MOV ES, AX

MOV SI, 0

GOTOXY X, Y

CALL PTHIS
DB "ORDENAMIENTO DE BURBUJA DE UNA LISTA DETERMINADA:", 0
INC Y
INC Y

GOTOXY X, Y
CALL PTHIS
DB "INTRODUZCA LOS NUMEROS: ", 0
ADD X, 20
INTRODUCIR_NUMERO:
ADD X, 4
GOTOXY X, Y
CALL SCAN_NUM
MOV LISTA_NUMEROS[SI], CL
INC SI
CMP SI, 8
JNE INTRODUCIR_NUMERO

MOV CX, 7
MOV SI, 0
MOV DI, 0

PRIMER_BUCLE:
PUSH CX
LEA SI, LISTA_NUMEROS
MOV DI, SI

SEGUNDO_BUCLE:
INC DI
MOV AL, [SI]
CMP AL, [DI]
JA INTERCAMBIAR
JB MENOR

INTERCAMBIAR:
MOV AH, [DI]
MOV [DI], AL
MOV [SI], AH

MENOR:
INC SI
LOOP SEGUNDO_BUCLE
POP CX
LOOP PRIMER_BUCLE

MOV X, 2
MOV Y, 6
GOTOXY X, Y

CALL PTHIS
DB "LA LISTA ORDENADA ES: ", 0
ADD X, 18
GOTOXY X, Y

MOV DI, 0
MOV AX, 0

IMPRIMIR_NUMEROS:
ADD X, 4
GOTOXY X,Y
MOV AL, LISTA_NUMEROS[DI]
CALL PRINT_NUM_UNS
INC DI
CMP DI, 7
JBE IMPRIMIR_NUMEROS


SALIR:
CALL CLEAR_SCREEN
MOV X, 2
MOV Y, 2
GOTOXY X,Y
CALL PTHIS
DB "MI NOMBRE ES: LUIS ALBERTO ALBALAT JUNCO", 0
MOV Y, 4
GOTOXY X, Y
CALL PTHIS
DB "GRACIAS POR UTILIZAR MI PROGRAMA!", 0


RET
INICIO ENDP
CODIGO ENDS

DEFINE_CLEAR_SCREEN
DEFINE_PTHIS
DEFINE_SCAN_NUM
DEFINE_PRINT_NUM
DEFINE_PRINT_NUM_UNS

END INICIO



